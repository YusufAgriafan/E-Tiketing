{
    "plugins": ["@shufo/prettier-plugin-blade", "@prettier/plugin-php", "prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 4
            }
        }
    ],
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": true,
    "phpVersion": "8.0",
    "trailingCommaPHP": false,
    "bracketSpacing": true,
    "arrowParens": "always"
}
